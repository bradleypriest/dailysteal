
<div id="deal-list">

	<% @feeds.sort_by { |feed_entry| feed_entry[:rank]}.each do |feed_entry| %>

	<% if feed_entry.published>=Time.now-1.day %>



	
	<div id ="deal" style="border:1px solid #999999;vertical-align:top;-moz-box-shadow:0 0 2px #999999;-webkit-box-shadow:0 0 2px #999999;background-color:#FFFFFF;display:inline-block;height:200px;list-style-type:none;margin:-2px 0 6px;text-align:center;width:195px;"> 
		<a href=<%=h feed_entry.url %> title="<%=h feed_entry.name %>" style="text-decoration:none">
			<div id ="deal_inner" style="height:187px;padding-top:4px;">
				<div id ="deal_image" style="height:150px;"> 
					<img style="border:none;margin-bottom:auto;	margin-top:auto; max-height:140px;max-width:194px;" src= <%=h feed_entry.picture%> 
				 	alt ="<%=h feed_entry.name %>">
				</div>
				
				<span id="deal_price" style="moz-box-shadow:0 0 1px white;-webkit-box-shadow:0 0 1px white;background-color:red;margin:-49px 0 0 96px;width:94px;opacity:0.7;padding:3px;position:absolute;">	
					<span id="price" style="font-size:13pt;vertical-align:baseline;color:white;font-family:verdana;font-weight:bold;margin:0 0 0 0;opacity:1;position:relative;text-shadow:1px 1px 4px #333333;">
						<%=h feed_entry.price %>
					</span>
				</span>
				
				<div id="deal_name" style="font-family:helvetica, arial;margin-top:-8px;color:black;font-weight:normal;line-height:1.1;padding-top:1px;position:relative;text-align:center;width:195px;">
						<h3 style="display:inline; color:black; font-size:10pt;font-weight:normal;"> 
							<%=h feed_entry.name.length >59? feed_entry.name[0..59]<<'...': feed_entry.name unless feed_entry.name.nil? %> 	
						</h3>
				</div>
					
			</div>
				
				<div id = "deal_bottom" style="vertical-align:bottom;background-color:#999999;height:11px;margin:-8px 0 0;padding:4px 2px 2px;position:relative;width:191px;">
					
					<span id="fullprice" style="font-size:9pt;vertical-align:baseline;color:black;font-family:verdana;font-weight:normal;margin:-2px 0 0 135px;position:absolute;text-decoration:line-through;">
					 	<%=h feed_entry.fullprice %>	
					</span>
			
					<span id="deal_site" style="font-family:helvetica, arial;font-size:8pt;vertical-align:baseline;color:white;position:absolute;text-align:center;width:195px;;"> 
						<%=h feed_entry.home%>
					</span>

					<span id="deal_expires" style="font-family:helvetica, arial;border:0 none;font-size:8pt;vertical-align:baseline;color:black;margin-left:1px;position:absolute;;">
						Expires <%=h (feed_entry.published+12).strftime(fmt='%l%P')%>
					</span>
				
					<div id = "deal_stock_bar" style="border:0 none;font-size:100%;vertical-align:baseline;width:195px;">
						
					</div>
				</div>
			</a>
			
 	</div>


	<%end%>
 	<%end%>
</div>
