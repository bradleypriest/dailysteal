<div id="deal-list">
  <div id = "toggle" style="height:1.2em">
    <% if params[:order]%>
      <%=link_to "Order by Most Popular ▾",root_url, :style => "color:blue;float:right"%>
    
    <%else%>
      <%=link_to "Order by Most Recent ▾",{:order => 'published'}, :style => "color:blue;float:right"%>
    <%end%>
  </div>
		<% @feeds.each_with_index do |feed_entry, i| %>

	<% dealid = ((i%4)+1) %>

	
	<div class ="deal deal-<%= dealid %>" > 
			<a href="<%= feed_entry.url %>" title="<%= feed_entry.name %>" style="display:box">
				
				
		
			<span class ="deal_inner">
				<span class ="deal_image"> 
					<img src= "<%= feed_entry.picture %>"
				 	alt ="<%= feed_entry.name %>" />
				</span>
				
				<span class="deal_price">	
					<span class="price">
						<%= feed_entry.price %>
					</span>
				</span>
				
				<span class="deal_name">
						 
							<%= truncate(feed_entry.name, :length => 60)%> 	
						
				</span>
					
			</span>
				
				<span class = "deal_bottom">
					
					<span class="fullprice">
					 	<%= feed_entry.fullprice %>	
					</span>
			
					<span class="deal_site"> 
						<%= feed_entry.home%>
					</span>

					<span class="deal_expires">
						Expires <%= (feed_entry.published+12.hours).strftime(fmt='%l%P')%>
					</span>
				
					<span class ="deal_stock_bar">
						<span class = "deal_stock" style="width:<%= feed_entry.stock%>% <% if feed_entry.stock == 0 %> ; display:none <%end%>">
						</span>
					</span>
				</span>
			</a>
			
				<% if feed_entry.stock == 0 %>
				<span class = "sold_out">
					<img src="/images/soldout.png" alt="Sold Out" />
				</span>
				<%end%>
		
 	</div>



 	<%end%>
</div>
<div id = 'abcd'>
  <%=mail_to 'hello@dailysteal.co.nz', image_tag('abcdef.jpg'), :encode => "hex"%>
</div>
</div>