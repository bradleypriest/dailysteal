<div id="deal-list">
	<% deal_id = 0%>
	
	<%= will_paginate(@feeds) %>		
	<% @feeds.each do |feed_entry| %>
	
	<% deal_id += 1%>

	<% dealid = (((deal_id-1)%4)+1) %>
	<div class ="deal deal-<%= dealid %>" title="<%=h feed_entry.name %>">
			<div class ="deal_inner">
				<div class ="deal_image"> 
					<img src= "<%=h feed_entry.picture %>"
				 	alt ="<%=h feed_entry.name %>" />
				</div>
				
				<div class="deal_price">	
					<div class="price">
						<%=h feed_entry.price %>
					</div>
				</div>
				
				<div class="deal_name">
						<h3> 
							<%=h feed_entry.name.length >59? feed_entry.name[0..59]<<'...': feed_entry.name unless feed_entry.name.nil? %> 	
						</h3>
				</div>
					
			</div>
				
				<div class = "deal_bottom">
					
					<div class="fullprice">
					 	<%=h feed_entry.fullprice %>	
					</div>
			
					<div class="deal_site"> 
						<%=h feed_entry.home%>
					</div>

					<div class="deal_date">
						<%=h (feed_entry.published+12).strftime(fmt='%a %e %b')%>
					</div>
				
					<div class = "deal_stock_bar">
					</div>
					</div>
				</div>
			
			
			
	<%end%>
</div>




