<h1>Listing deals</h1>




<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Fullprice</th>
    <th>Description</th>
    <th>Site</th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%=h deal.title %></td>
    <td><%=h deal.price %></td>
    <td><%=h deal.fullprice %></td>
    <td><%=h deal.description %></td>
    <td><%=h deal.site %></td>
    <td><%= link_to 'Show', deal %></td>
    <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
    <td><%= link_to 'Destroy', deal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New deal', new_deal_path %>